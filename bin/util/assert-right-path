#!/usr/bin/env bash

# Most times, if we enter here successfully, we already asserted.
if [ ! -d "./bin" ]; then
    echo "Run from the root of the repository. quitting."
    exit 1
fi

if [ ! -d "./imagestore" ]; then
    exit 1
fi

if [ ! -d "./service" ]; then
    exit 1
fi


# todo: assert the following is installed:
#         virtualenv
#         flask package
#         npm packages (on client only)

exit 0
